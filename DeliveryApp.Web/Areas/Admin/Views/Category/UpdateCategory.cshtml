@model DeliveryApp.Web.Areas.Admin.Models.CategoryUpdateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />   
    <link href="~/Admin/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div style="margin-top: 180px;" class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-dark my-4">Category Update</h3></div>
                                <div class="card-body">
                                    <form asp-action="UpdateCategory" asp-controller="Category" method="post">
                                        <input type="hidden" value="@Model.ProductTypeDto.Id" />
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputName">New Category Name</label>
                                            <input name="Name" class="form-control py-4" id="inputName" type="text" value="@Model.ProductTypeDto.Name" />
                                            <span asp-validation-for="@Model.ProductTypeUpdateDto.Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" for="inputURL">New Category Url</label>
                                            <input name="PictureUrl" class="form-control py-4" id="inputURL" type="url" value="@Model.ProductTypeDto.PictureUrl" />
                                            <span asp-validation-for="@Model.ProductTypeUpdateDto.PictureUrl" class="text-danger"></span>
                                        </div>

                                        <div style="float: right;" class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="~/Admin/js/scripts.js"></script>
</body>
</html>