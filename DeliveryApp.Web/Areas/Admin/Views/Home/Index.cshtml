@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DeliveryApp.Web.Areas.Admin.Models.Order
@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
 <link href="~/Admin/css/styles.css" rel="stylesheet" />
<div id="layoutSidenav_content">
    <main>

        <div id="layoutSidenav">

            <div id="layoutSidenav_content">

                <div class="container-fluid">


                    <div class="row">
                        <br>

                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table mr-1"></i>
                            Orders
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Products</th>
                                            <th>DeliverAddress</th>
                                            <th>OrderDate</th>
                                            <th>Quantities</th>
                                            <th>TotalPrice</th>
                                            <th>Status</th>
                                            <th>Update</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr>
                                                <form asp-controller="Order" asp-action="UpdateOrder" method="post">
                                                <td>@item.Id</td>
                                                <td>
                                                    @foreach (var product in item.Products)
                                                    {
                                                        @product.Name
                                                    }
                                            </td>
                                            <td>@item.DeliverAddress</td>
                                            <td>@item.OrderDate</td>
                                            <td>@item.Quantities</td>
                                            <td>@item.TotalPrice</td>
                                            <td>
                                                <input type="hidden" name="Id" value="@item.Id">
                                                <select class="w3-btn w3-white w3-border w3-border-blue w3-round-large"  name="OrderStatus">
                                                    <option value="0">@item.Status</option>
                                                    <option value="1">InDelivery</option>
                                                    <option value="2">Delivered</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input class="w3-btn w3-white w3-border w3-border-blue w3-round-large" type="submit" value="Submit">

                                            </td>
                                            </form>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>