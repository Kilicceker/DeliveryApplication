@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DeliveryApp.Web.Models.UserList
@{
    Layout = "_Layout";
}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="~/Admin/css/styles.css" rel="stylesheet" />
<div id="layoutSidenav_content">
    <main>

        <div id="layoutSidenav">

            <div id="layoutSidenav_content">

                <div class="container-fluid">


                    <div class="row">
                        <br>

                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table mr-1"></i>
                            Orders
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Select Role </th>
                                            <th>Update Role</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @if (Model.Data != null)
                                        {
                                            @foreach (var item in Model.Data)
                                            {
                                                <tr>
                                                    <form asp-controller="User" asp-action="RoleUpdate" method="post">
                                                    <td>@item.Id</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.UserSurname</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.PhoneNumber</td>
                                                    <td>
                                                        <input type="hidden" name="Id" value="@item.Id">
                                                        <select class="w3-btn w3-white w3-border w3-border-blue w3-round-large" name="Role">
                                                            <option value="Courier">Courier</option>
                                                            <option value="Admin">Admin</option>
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <button type="submit" class="w3-btn w3-white w3-border w3-border-blue w3-round-large">Update Role</button>

                                                    </td>
                                                    </form>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</div>
